<div data-controller="user-show-modal" data-user-show-modal-path-value="<%= user_path(user) %>">
  <div class="avatar-with-badge <%= "small" if local_assigns[:size] %>" data-action="click->user-show-modal#show">
    <% avatar = ["avatar-1.png", "avatar-2.png","avatar-3.png","avatar-4.png",
    "avatar-5.png","avatar-6.png","avatar-7.png","avatar-8.png", "avatar-9.png","avatar-10.png"] %>
    <%= image_tag("avatars/#{avatar.sample}", class: 'avatar-large', alt: 'avatar') %>
    <% if user.user_grade.present? %>
      <i class="<%= UserGrade::GRADES[user.user_grade.name] %>"></i>
    <% end %>
  </div>
</div>
