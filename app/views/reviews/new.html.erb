<div class="container text-white">
  <div class="row d-flex justify-content-center text-center">
    <div class="col-10">
      <h4 class="mb-4 mt-4">
        Leave a Review about your tchat with <%= @reviewee_user.username.capitalize %>
      </h4>
      <%= simple_form_for [@reviewee_user_topic, @review], html:{class: "mt-5"} do |f| %>
        <%= f.input :content, as: :text, label: false, placeholder: "What did you think of this topic?", input_html: { rows: 4 }, wrapper_html: {class: "mb-4"} %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}}, wrapper_html: {class: "mb-4"} %>
        <h2 class="smiley fs-1">ðŸ¤”</h2>
        <%= f.input :interesting, collection: (1..5), label: "Interest Level", input_html: { data: { controller: "star-rating" } }, wrapper_html: {class: "mb-4 mt-0"} %>
        <h2 class="smiley fs-1">ðŸ˜‚</h2>
        <%= f.input :fun, collection: (1..5), label: "Fun Factor (1 - not fun, 5 - super fun)", input_html: { data: { controller: "star-rating" } }, wrapper_html: {class: "mt-0 mb-4"} %>
        <h2 class="smiley fs-1">ðŸ˜‡</h2>
        <%= f.input :nice, collection: (1..5), label: "Nice Level (1 - Not Nice, 5 - Very Nice)", input_html: { data: { controller: "star-rating" } }, wrapper_html: {class: "mt-0 mb-4"} %>
        <%= f.input :red_flag, input_html: { data: { controller: "star-rating" } }, label_html: { class: 'text-white' }, wrapper_html: {class: "mb-4"}%>
        <%= f.button :submit, "Submit Review", class: "styled-button shadow-lg border border-light rounded-4" %>
      <% end %>
    </div>
  </div>
</div>
